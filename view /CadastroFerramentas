    }                                      

    private void JBExcluirActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
         String nome = TFNome.getText();

        if (nome.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Por favor, insira o nome da ferramenta a ser excluída.");
        } else {
            FerramentaDAO ferramentaDAO = new FerramentaDAO();
            ferramentaDAO.deleteFerramentaBD(nome);

            JOptionPane.showMessageDialog(this, "Ferramenta excluída com sucesso!");

            limparCampos();
        }
    }                                         

    private void JBFecharActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

    private void JBSalvarActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String nome = TFNome.getText();
        String marca = TFMarca.getText();
        String custo = TFCusto.getText();

        if (nome.isEmpty() || marca.isEmpty() || custo.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Por favor, preencha todos os campos.");
        } else {
            Ferramenta ferramenta = new Ferramenta();
            ferramenta.setNome(nome);
            ferramenta.setMarca(marca);
            ferramenta.setCusto(Double.parseDouble(custo));

            FerramentaDAO ferramentaDAO = new FerramentaDAO();
            ferramentaDAO.insertFerramentaBD(ferramenta);

            JOptionPane.showMessageDialog(this, "Ferramenta salva com sucesso!");

            limparCampos();
        }
    }                                        

