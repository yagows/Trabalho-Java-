        // TODO add your handling code here:
    }                                          

    private void JBFecharActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

    private void JBExcluirActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String nome = TFNome.getText();

        if (nome.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Por favor, insira o nome do amigo a ser excluído.");
        } else {
            AmigoDAO amigoDAO = new AmigoDAO();
            amigoDAO.deleteAmigoBD(nome);

            JOptionPane.showMessageDialog(this, "Amigo excluído com sucesso!");

            limparCampos();
        }
    }                                         


