    private void TBDevolverActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
         try {
           
            int idEmprestimo = Integer.parseInt(TFIdEmprestimo.getText());

            
            int resposta = JOptionPane.showConfirmDialog(this, "Tem certeza de que deseja devolver e excluir este empréstimo?", "Confirmar devolução e exclusão", JOptionPane.YES_NO_OPTION);

            if (resposta == JOptionPane.YES_OPTION) {
                
                EmprestimoDAO emprestimoDAO = new EmprestimoDAO();
                emprestimoDAO.deleteEmprestimoBD(idEmprestimo);

                JOptionPane.showMessageDialog(this, "Empréstimo devolvido e excluído com sucesso!");
            }
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "ID do empréstimo inválido: " + e.getMessage());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Erro ao devolver e excluir empréstimo: " + e.getMessage());
        }
    }                                          

    private void TBFecharActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

