      private void loadEmprestimos() throws SQLException {
          double totalCusto = 0.0;
        EmprestimoDAO emprestimoDAO = new EmprestimoDAO();
        List<Emprestimo> emprestimos = emprestimoDAO.getMinhaLista();

        DefaultTableModel model = (DefaultTableModel) Renda.getModel();
        model.setRowCount(0); // Limpa a tabela antes de adicionar novos dados

        for (Emprestimo emprestimo : emprestimos) {
            Object[] row = {
                emprestimo.getNomeFerramenta(),
                emprestimo.getCustoFerramenta(),
                totalCusto +=  emprestimo.getCustoFerramenta (),
                
                
               
            };
            model.addRow(row);
            
            
        }
    }
      
      
